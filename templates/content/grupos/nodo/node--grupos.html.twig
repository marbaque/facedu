{% set unique_id = url | replace({ '/' : '_' }) %}
{% set collapse_unique_id = 'collapse_' ~ url | replace({ '/' : '_' }) %}
<div class="panel panel-default grupos_panel">
  <div class="panel-heading" role="tab" id="{{ unique_id }}">
    <a role="button" data-toggle="collapse" data-parent="#pagina__referencias" data-target="#{{ collapse_unique_id }}" aria-expanded="true" aria-controls="{{ collapse_unique_id }}">
      {{ label }}
    </a>
  </div> 
  <div id="{{ collapse_unique_id }}" class="panel-collapse collapse clearfix" role="tabpanel" aria-labelledby="{{ unique_id }} ">
    <div class="panel-body">
      {{ content.field_grupos_collection }}
    </div>
  </div>
</div>